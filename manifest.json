{
  "manifest_version": 2,
  "name": "Local LLM Tab Context",
  "version": "1.0",
  "description": "Get tab context and generate answers using local LLM",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Local LLM Context"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
