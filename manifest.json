{
  "manifest_version": 2,
  "name": "Local LLM Context",
  "version": "1.0",
  "description": "Provides context to local LLMs from browser tabs",

  "permissions": ["activeTab", "tabs", "storage"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Local LLM Context"
  },

  "icons": {
    "48": "icon.png"
  }
}
